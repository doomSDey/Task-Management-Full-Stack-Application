{
    "name": "task_tracker_backend",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon -r dotenv/config index.js",
        "db:create": "sequelize-cli db:create",
        "db:migrate": "sequelize-cli db:migrate",
        "db:g:migration": "sequelize-cli migration:generate --name",
        "db:reset": "sequelize-cli db:drop && sequelize-cli db:create && sequelize-cli db:migrate",
        "db:g:seed": "sequelize-cli seed:generate --name",
        "db:seeds": "sequelize-cli db:seed:all",
        "db:reseed": "sequelize-cli db:drop && sequelize-cli db:create && sequelize-cli db:migrate && sequelize-cli db:seed:all",
        "format": "prettier --check --ignore-path .gitignore .",
        "format:fix": "prettier --write --ignore-path .gitignore .",
        "test": "jest",
        "test-watch": "jest --watch",
        "lint": "next lint"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.6.0",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.6.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.12.12",
        "jest": "^29.7.0",
        "nodemon": "^2.0.7",
        "prettier": "^3.2.5",
        "sequelize-cli": "^6.2.0"
    },
    "jest": {
        "testEnvironment": "node"
    }
}
